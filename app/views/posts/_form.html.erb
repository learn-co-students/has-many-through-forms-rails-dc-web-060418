<div class=post-content>
  <%= @post.content %>
</div>
<%= form_for post do |f| %>
  <%= f.label :title, "Post Title" %>
  <%= f.text_field :title %><br><br>
  <%= f.label :content, "Content" %>
  <%= f.text_area :content %><br><br>
  <h3>Category:</h3>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    New Category: <%= categories_fields.text_field :name %>
  <% end %>
  <br><br><br>
  <%= f.submit %>
<% end %>
